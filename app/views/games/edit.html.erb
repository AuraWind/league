<h1>My Games</h1>

<h2>Edit game</h2>

<% form_for :user_game, :url => {:controller => :games, :action => :update, :id =>@user_game.id} do |f| -%>
	<table>
		<tr>
			<td>Game</td>
			<td>
				<%=h @user_game.game.name %>
			</td>
		</tr>
		<tr>
			<td>Platform</td>
			<td>
				<%=h @user_game.platform.name %>
			</td>
		</tr>
		<tr>
			<td>Rating</td>
			<td>
				<%= f.select :rating, [1,2,3,4,5], :include_blank => true %>
			</td>
		</tr>
		<tr>
			<td>&nbsp;</td>
			<td><%= f.submit %> <%= link_to 'Cancel', :controller => :games %></td>
		</tr>
	</table>
<% end -%>