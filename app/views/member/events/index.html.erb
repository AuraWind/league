<h1>My Events</h1>

<% if @user_signups.present? -%>
	<table>
		<tr>
			<th>Event Name</th>
			<th>Event Type</th>
			<th>Event Date</th>
		</tr>	
		<% @user_signups.each do |signup| -%>
			<tr>
				<td><%=h signup.signupable.name %></td>
				<td><%=h signup.signupable.event_type.name %></td>
				<td><%= event_date(signup.signupable) %></td>
			</tr>
		<% end -%>
<% else -%>
	<em>You have no upcoming events.</em>
<% end -%>