<h1>Welcome to the League</h1>

<h2>Tournaments</h2>

<% if @tournaments.present? -%>
	<% @tournaments.each do |tournament| -%>
		<p><%= tournament.name %> <%= link_to 'Show Details', :controller => :events, :action => :show, :id => gathering.id %></p>
	<% end -%>
<% else -%>
	<p><em>No upcoming tournaments.</em></p>
<% end -%>

<h2>Gatherings</h2>

<% if @gatherings.present? -%>
	<% @gatherings.each do |gathering| -%>
		<p><%= gathering.name %> <%= link_to 'Show Details', :controller => :events, :action => :show, :id => gathering.id %></p>
	<% end -%>
<% else -%>
	<p><em>No upcoming events.</em></p>
<% end -%>